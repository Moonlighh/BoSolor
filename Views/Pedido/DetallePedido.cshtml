@model IEnumerable<BODEGA_SOLORZANO.Models.BoSolor.DetalleTransaccionModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

@section StylesMain {

}

<!-- Header-->
<header class="bg-dark py-1">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Productos que tiene el pedido</h1>
            <p class="lead fw-normal text-white-50 mb-0">Listado de productos que pertenecen al pedido</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Fecha de registro del pedido-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Información</div>
                        <!-- Product image-->
                        <img class="card-img-top mt-3" src="@item.IdProductoNavegacion.Imagen" alt="@item.IdProductoNavegacion.Nombre" />
                        <!-- Detalle pedido-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Producto-->
                                <h5 class="fw-bolder">@item.IdProductoNavegacion.Nombre.ToUpper()</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Datos -->
                                <div class="d-flex justify-content-center small mb-2">
                                    <p>
                                        DATOS DEL PRODUCTO<br>
                                        Precio: @item.IdProductoNavegacion.PrecioPorConjunto<br>
                                        Descripción: @item.IdProductoNavegacion.Descripcion<br>
                                        Categoria: @item.IdProductoNavegacion.IdCategoriaNavegacion.Nombre<br>
                                    </p>
                                </div>
                                <!-- Product price-->
                                <span class="badge bg-danger">Cantidad solicitada: @item.CantidadPorConjunto</span>
                                <h4>S/.@item.SubTotal</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



@section ScriptsMain {

}