@model BODEGA_SOLORZANO.Models.BoSolor.PedidoModel
@{
    ViewData["Title"] = "Guardar Pedido";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}


<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card" style="max-width: 30rem;">
        <div class="card-body">
            <h5 class="card-title">Registrar Pedido</h5>
            <form asp-action="Guardar" asp-controller="Pedido" method="post">

                <!-- Dirección de Entrega -->
                <div class="form-group">
                    <span class="input-group-text">Dirección de Entrega</span>
                    <input asp-for="DireccionEntrega" class="form-control" placeholder="Ingrese la dirección de entrega" aria-label="Dirección de Entrega" aria-describedby="basic-addon1">
                    <span asp-validation-for="DireccionEntrega" class="text-danger"></span>
                </div>

                <!-- Referencia -->
                <div class="form-group">
                    <span class="input-group-text">Referencia</span>
                    <input asp-for="Referencia" class="form-control" placeholder="Ingrese una referencia" aria-label="Referencia">
                    <span asp-validation-for="Referencia" class="text-danger"></span>
                </div>

                <!-- Detalle -->
                <div class="form-group">
                    <span class="input-group-text">Detalle</span>
                    <input asp-for="Detalle" class="form-control" placeholder="Ingrese el detalle del pedido" aria-label="Detalle">
                    <span asp-validation-for="Detalle" class="text-danger"></span>
                </div>


                <!-- Cliente -->
                <div class="form-group">
                    <span class="input-group-text" id="basic-addon7">Cliente</span>
                    <select name="idCliente" asp-items="@(new SelectList(ViewBag.Cliente, "IdCliente", "Nombres"))" class="form-select">
                        <option value="">Selecciona un Cliente</option>
                    </select>
                    <span class="text-danger"></span>
                </div>

                <!-- Transacción -->
                <div class="form-group">
                    <span class="input-group-text" id="basic-addon8">Transacción</span>
                    <select name="idTransaccion" asp-items="@(new SelectList(ViewBag.transaccion, "IdTransaccion", "CodTransaccion"))" class="form-select">
                        <option value="">Selecciona una Transacción</option>
                    </select>
                    <span class="text-danger"></span>
                </div>


                <br />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Cuenta" class="btn btn-dark">Visualizar</a>
                </div>
            </form>
        </div>
    </div>
</div>

